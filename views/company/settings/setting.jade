    #editPension.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
     .modal-dialog(role='document')
        .modal-content
         .modal-header
            h5#exampleModalLabel.modal-title Edit Pension
            button.close(type='button' data-dismiss='modal' aria-label='Close')
             span(aria-hidden='true') ×
         .modal-body
           
            form(action='/company/edit_pension_details/#{pension.id}' method='POST')
             
            
              .form-group
               label(for="title") Employee Percentage
               input.form-control#employee(type="number", name="employee",max=10,value=pension.employee_percentage, min=0,step='0.1',required,placeholder='Employee Percentage')
              .form-group
                label(for="title") Employer Percentage
                input.form-control#employer(type="number", name="employer",max=10,value=pension.employer_percentage, min=0,step='0.1',required,placeholder='Employer Percentage')
              .form-group
                label(for="title") Maximum Amount
                input.form-control#employer(type="number", name="amount", value=pension.maximum_amount, min=1,required,placeholder='Maximum Amount')
               
             
              .form-group
               button.btn.btn-primary Save
               
             
         .modal-footer
            button.btn.btn-secondary(type='button' data-dismiss='modal') Close
    // relief
