                                th Applied On
                                th Status
                                th Actions
                                
                                
                              tbody
                               each leave in leaves
                                tr
                                 td 
                                  | #{leave.employee}
                                 td=leave.type
                                 td=leave.start_date
                                 td=leave.end_date
                                 td=leave.applied_on
                                 td
                                  if leave.status ==='Pending'
                                   span.badge.badge-dark #{leave.status}
                                  if leave.status ==='Under Review'
                                   span.badge.badge-info #{leave.status}
