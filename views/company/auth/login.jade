    style.
     .alert-error
      {
          color: #a94442;
          background-color: #f2dede;
          border-color: #ebccd1;
      }
  body.sign-in
    .wrapper
      .sign-in-page
        .signin-popup
          .signin-pop
            .row
              
              .col-lg-6
                .login-sec
                  
                  #tab-1.sign_in_sec.current
                    h3 Company Sign In
                    != messages('message', locals)
                    form(action='/company/login_post',method='POST')
                      .row
                        .col-lg-12.no-pdd
                          .sn-field
                            input(type='email' name='username' placeholder='Email' required)
                            i.la.la-user
                          // sn-field end
                        .col-lg-12.no-pdd
                          .sn-field
                            input(type='password' name='password' placeholder='Password' required)
                            i.la.la-lock
                        
                        .col-lg-12.no-pdd
                          button(value='submit' style='background-color:gray') Sign in
                   
                        .col-lg-12.no-pdd(style='margin-top:20px')
                          span(style='font-size:0.9em') 
                           a(href="/") Go back to homepage
                      
                     
                      script(type='text/javascript' src='/auth/js/jquery.min.js')
                      script(type='text/javascript' src='/auth/js/popper.js')
                      script(type='text/javascript' src='/auth/js/bootstrap.min.js')
                      script(type='text/javascript' src='/auth/lib/slick/slick.min.js')
                      script(type='text/javascript' src='/auth/js/script.js')
